@page
@model Bookware.Pages.Student_Pages.AllStudentsModel
@{
    ViewData["Title"] = "All Students";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <a class="btn btn-primary m-2" asp-page="/Student_Pages/CreateStudent"><i class="bi bi-plus"></i>Create new</a>
    <div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Adress</th>
                <th scope="col">Semester</th>
                <th scope="col">Semester start</th>
                <th scope="col">ClassId</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Students != null)
            {
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.StudentName</td>
                        <td>@item.Address</td>
                        <td>@Model.GetSemester(item)</td>
                        <td>@item.StartDate</td>
                        <td>@item.ClassId</td>
                        <td> <a asp-page="/Student_Pages/EditStudents" asp-route-id="@item.StudentId" class="btn btn-primary"> Edit </a> </td>
                        <td class="justify-content-between">
                            <form asp-page-handler="Delete" method="post" asp-route-id="@item.StudentId" onclick="return confirm('Are you sure you wan to delete?')">
                                <button class="btn btn-primary" type="Submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>



    </table>

</div>