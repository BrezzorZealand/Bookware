@page
@model Bookware.Pages.Teacher_Pages.AllTeachersModel
@{
    ViewData["Title"] = "Teachers";
}

<h1>List of Teachers</h1>


<a class="btn btn-primary m-2" asp-page="AddTeachers">Add Teacher</a>

<div class="text-md-start">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Teachers != null)
            {
                @foreach (var item in Model.Teachers)
                {
                    <tr>
                        <td>@item.TeacherId</td>
                        <td>@item.Name </td>
                        <td class="justify-content-between">
                            <a asp-page="/Teacher_Pages/EditTeachers" asp-route-id="@item.TeacherId" class="btn btn-primary">Edit</a>
                            <form asp-page-handler="Delete" method="post" asp-route-id="@item.TeacherId" onclick="return confirm('Are you sure you want to delete?')">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

