@page
@model Bookware.Pages.Teacher_Pages.TeacherDetailsModel
@{
    ViewData["Title"] = "Teacher Details";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Teacher!.TeacherId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(Model => Model.Teacher!.TeacherId)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Teacher!.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(Model => Model.Teacher!.Name)</dd>
    </dl>
    @if (Model.Teacher!.TeacherEdus != null && Model.Teacher.TeacherEdus!.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center caption-top">
                <caption>List of Teacher Educations</caption>
                <thead class="table-dark">
                    <tr>
                        <th>Classes</th>
                    </tr>
                </thead>
                <tbody class="table-yellow">
                    @foreach (var teacherEdu in Model.Teacher!.TeacherEdus)
                    {
                        foreach (var teacherClass in teacherEdu.TeacherClasses)
                        {
                            <tr><td>@teacherClass.Class!.ClassName</td></tr>
                        }
                    }
                </tbody>
            </table>
            <table class="table table-bordered table-hover text-center caption-top">
                <caption>List of Teacher Subjects</caption>
                <thead class="table-dark">
                    <tr>
                        <th>Subjects</th>
                    </tr>
                </thead>
                <tbody class="table-yellow">
                    @foreach (var teacherEdu in Model.Teacher!.TeacherEdus)
                    {
                        <tr><td> @teacherEdu.EduSub.Subject.SubjectName</td></tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-dark m-3">
            <h5 class="alert-heading"><i class="bi bi-exclamation-circle-fill"></i> Information</h5>
            <hr>
            <p> No Teacher Educations and Subjects found!</p>
        </div>
    }
</div>
