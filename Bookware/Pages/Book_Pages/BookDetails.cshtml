@page
@model Bookware.Pages.Book_Pages.BookDetailsModel
@{
    ViewData["Title"] = "Book Details";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.BookId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.BookId)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Title)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Author)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Author)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Year)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Year)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Isbn)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Isbn)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.ClassBooks)</dt>
        <dd class="col-sm-10">
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Class Id</th>
                            <th>Class Name</th>
                            <th>Students</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cb in Model.Book!.ClassBooks)
                        {
                            <tr>
                                <td>@cb.ClassId</td>
                                <td>@cb.Class.ClassName</td>
                                <td>
                                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target=".tr-@cb.ClassId-collapse" aria-expanded="false" aria-controls="collapseExample"><i class="bi bi-list"></i></button>
                                </td>
                            </tr>
                            <tr class="collapse tr-@cb.ClassId-collapse">
                                <td colspan="3">
                                    <table class="table table-bordered table-hover">
                                        <thead class="table-secondary">
                                            <tr>
                                                <th>Student Id</th>
                                                <th>Student Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in cb.Class.Students)
                                            {
                                                <tr>
                                                    <td>@item.StudentId</td>
                                                    <td>@item.StudentName</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </dd>
    </dl>
</div>