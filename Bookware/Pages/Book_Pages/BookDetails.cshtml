@page
@model Bookware.Pages.Book_Pages.BookDetailsModel
@{
    ViewData["Title"] = "Book Details";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.BookId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.BookId)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Title)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Author)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Author)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Year)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Year)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book!.Isbn)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Book!.Isbn)</dd>        
    </dl>
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center caption-top">
            <caption>List of Classes</caption>
            <thead class="table-dark">
                <tr>
                    <th scope="col">Classes</th>
                    <th scope="col" class="col-1">
                        @if (Model.Book!.ClassBooks is not null && Model.Book!.ClassBooks.Count > 0)
                        {
                            <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target=".tr-@Model.Book.BookId" aria-expanded="false" aria-controls="collapseExample"><i class="bi bi-list"></i></button>
                        }
                    </th>
                </tr>
            </thead>
            <tbody class="table-yellow">
                @if (Model.Book!.ClassBooks is not null && Model.Book!.ClassBooks.Count > 0)
                {
                    <tr class="collapse tr-@Model.Book.BookId">
                        <td colspan="2">
                            <div class="collapse tr-@Model.Book.BookId">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="col-1">Id</th>
                                            <th scope="col">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-yellow">
                                        @foreach (var classBook in Model.Book.ClassBooks)
                                        {
                                            <tr>
                                                <td>@classBook.Class.ClassId</td>
                                                <td>@classBook.Class.ClassName</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>