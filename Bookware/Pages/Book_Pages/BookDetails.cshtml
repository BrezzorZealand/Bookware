@page
@model Bookware.Pages.Book_Pages.BookDetailsModel
@{
    ViewData["Title"] = "Book Details";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.BookId)   </dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Book.Title)  </dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Book.Author) </dt>            
        </dl>
    </div>
</div>