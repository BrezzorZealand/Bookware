@page "{id:int}"
@model Bookware.Pages.Book_Pages.UpdateBookModel
@{
    ViewData["Title"] = "Update Book";
}

<div class="card">
    <div class="card-header">
        <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="align-content-center">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @* This formgroup id is just to be able to display the BookId for the Book you are about to update *@
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Book!.BookId" class="form-control" type="text" placeholder="@Html.DisplayNameFor(book => book.Book!.BookId)" disabled>
                            <label asp-for="Book!.BookId">Id</label>
                        </div>
                        @* This formgroup is just to be able to get and set the BookId for the Updated Book *@
                        <div class="form-group">
                            <input asp-for="Book!.BookId" class="form-control" type="text" hidden/>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Book!.Title" class="form-control" type="text" placeholder="@Html.DisplayNameFor(book => book.Book!.Title)" />
                            <label asp-for="Book!.Title">Title</label>
                            <span asp-validation-for="Book!.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Book!.Author" class="form-control" type="text" placeholder="@Html.DisplayNameFor(book => book.Book!.Author)" />
                            <label asp-for="Book!.Author">Author</label>
                            <span asp-validation-for="Book!.Author" class="text-danger"></span>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Book!.Year" class="form-control" type="number" placeholder="@Html.DisplayNameFor(book => book.Book!.Year)" />
                            <label asp-for="Book!.Year">Year</label>
                            <span asp-validation-for="Book!.Year" class="text-danger"></span>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Book!.Isbn" class="form-control" type="number" placeholder="@Html .DisplayNameFor(book => book.Book!.Isbn)" />
                            <label asp-for="Book!.Isbn">Isbn</label>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Update" class="btn btn-success" />
                            <a class="btn btn-danger" asp-page="/Book_Pages/AllBooks">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
