@model Bookware.Models.Book

<div class="modal fade" id="DeleteModal-@Model.BookId" aria-labelledby="DeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteModalLabel">Delete Book Confirmation!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="@Model.BookId"/>
                </form>   
                <p>Are you sure to delete this Book?</p>
            </div>
        </div>
    </div>
</div>