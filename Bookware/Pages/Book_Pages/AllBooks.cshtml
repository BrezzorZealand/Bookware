@page
@model Bookware.Pages.Book_Pages.AllBooksModel
@{
    ViewData["Title"] = "All Books";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<a class="btn btn-primary m-2" asp-page="/Book_Pages/CreateBook">Create New Book</a>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books != null)
        {
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>@item.BookId</td>
                    <td>@item.Title </td>
                    <td>@item.Author</td>
                    <td>@item.Year</td>
                    <td class="justify-content-between">
                        <a asp-page="BookDetails" asp-route-id="@item.BookId" class="btn btn-success">Details</a>
                        <form asp-page-handler="Delete" method="post" asp-route-id="@item.BookId" onclick="return confirm('Are you sure you want to delete?')">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <a asp-page="UpdateBook" asp-route-id="@item.BookId" class="btn btn-primary">Update</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>