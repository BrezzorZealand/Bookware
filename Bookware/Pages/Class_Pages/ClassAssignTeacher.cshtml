@page
@model Bookware.Pages.Class_Pages.ClassAssignTeacherModel

@{
    ViewData["Title"] = "ClassAssignTeacher";
}

<div class="card">
    <div class="card-header">
        <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="align-content-center">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form method="post">
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Class!.ClassId" class="form-control" type="number" placeholder="@Html.DisplayNameFor(c => c.Class!.ClassId)" readonly />
                            <label asp-for="Class!.ClassId">@Html.DisplayNameFor(c => c.Class!.ClassId)</label>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Class!.ClassName" class="form-control" type="text" placeholder="@Html.DisplayNameFor(c => c.Class!.ClassName)" readonly />
                            <label asp-for="Class!.ClassName">@Html.DisplayNameFor(c => c.Class!.ClassName)</label>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <select asp-for="TeacherClass.TeachEduId" asp-items="Model.TeacherEduOptions" class="form-control">
                                <option value="">Select Teacher with Education and Subject</option>
                            </select>
                            <label asp-for="TeacherClass.TeachEduId">Education</label>
                            <span asp-validation-for="TeacherClass.TeachEduId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Create" name="Assign" asp-page-handler="Create" class="btn btn-success" />
                            <a class="btn btn-danger" asp-page="/Class_Pages/AllClasses">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
