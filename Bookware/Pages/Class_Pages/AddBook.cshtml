@page
@model Bookware.Pages.Class_Pages.AddBookModel
@{
    ViewData["Title"] = "Add Book";
}

<div class="card bg-yellow">
    <div class="card-header">
        <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="align-content-center">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form method="post">                        
                        <div class="form-group form-floating mb-3">
                            <input asp-for="ClassBook!.ClassId" class="form-control" type="text" placeholder="@Html.DisplayNameFor(k => k.ClassBook!.ClassId)" readonly />
                            <label asp-for="ClassBook!.ClassId">ClassId</label>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <select class="form-select" asp-for="ClassBook!.BookId" asp-items="Model.Books"></select>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Add" class="btn btn-success" />
                            <a class="btn btn-danger" asp-page="/Class_Pages/AllClasses">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>