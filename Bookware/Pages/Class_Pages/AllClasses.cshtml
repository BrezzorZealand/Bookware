@page
@model Bookware.Pages.Class_Pages.AllClassesModel
@{
    ViewData ["Title"] = "All Classes";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<a class="btn btn-dark m-2" asp-page="/Class_Pages/CreateClass"><i class="bi bi-plus"></i> Create New Class</a> 

<div class="table-responsive">
    <table class="table table-hover table-bordered caption-top text-center">
        <caption>List of Classes</caption>
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Class name</th>
                <th scope="col" class="col-1"></th>
            </tr>
        </thead>
        <tbody class="table-yellow">
            @if (Model.classes != null)
            {
                @foreach (var item in Model.classes)
                {
                    <tr>
                        <td>@item!.ClassId</td>
                        <td>@item!.ClassName</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-page="AddBook" asp-route-id="@item.ClassId" class="dropdown-item"><i class="bi bi-book"></i> Add Book</a></li>
                                    <li><a asp-page="ClassDetails" asp-route-id="@item.ClassId" class="dropdown-item"><i class="bi bi-journal-text"></i> Details</a></li>
                                    <li><a asp-page="UpdateClass" asp-route-id="@item.ClassId" class="dropdown-item"><i class="bi bi-pen"></i> Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-page-handler="Delete" method="post" asp-route-id="@item.ClassId" onclick="return confirm('Are you sure you want to delete?')">
                                            <button class="dropdown-item text-danger"><i class="bi bi-trash"></i> Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>                                                                                 
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>