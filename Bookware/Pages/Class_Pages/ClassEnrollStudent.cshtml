                            </select>
                            <label asp-for="Student!.StudentId">Student</label>
                            @*<span asp-validation-for="Student!.StudentId" class="text-danger"></span>*@
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Enroll" class="btn btn-success"/>
