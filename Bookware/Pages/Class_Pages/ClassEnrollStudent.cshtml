                        <div class="form-group form-floating mb-3">
                            <input class="form-control" type="text" value="@Html.DisplayFor(c => c.Class!.ClassId)" readonly />
                            <label>Class Id</label>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input class="form-control" type="text" value="@Html.DisplayFor(c => c.Class!.ClassName)" readonly />
