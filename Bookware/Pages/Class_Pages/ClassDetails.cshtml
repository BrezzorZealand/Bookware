@page
@model Bookware.Pages.Class_Pages.ClassDetailsModel
@{
    ViewData["Title"] = "Class Details";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>
<div>
    <dl class="row">        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Class!.ClassId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(Model => Model.Class!.ClassId)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Class!.ClassName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(Model => Model.Class!.ClassName)</dd>
    </dl>
    <div class="table-responsive">
        @if (Model.Class!.TeacherClasses is not null && Model.Class!.Students is not null && Model.Class!.ClassBooks is not null && Model.Class.TeacherClasses.Count > 0 && Model.Class.Students.Count > 0 && Model.Class.ClassBooks.Count > 0)
        {
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Subjects</th>
                        <th scope="col" class="col-1">
                            <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target=".tr-@Model.Class.ClassId-subjects" aria-expanded="false" aria-controls="collapseExample"><i class="bi bi-list"></i></button>
                        </th>
                    </tr>
                </thead>
                <tbody class="table-yellow">
                    <tr class="collapse tr-@Model.Class.ClassId-subjects">
                        <td colspan="3">
                            <div class="collapse tr-@Model.Class.ClassId-subjects">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="col-1">Id</th>
                                            <th scope="col">Subject Name</th>
                                            <th scope="col">Teacher</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-yellow">
                                        @foreach (var sub in Model.Class.TeacherClasses!)
                                        {
                                            <tr>
                                                <td>@sub.TeachEdu.EduSub.Subject.SubjectId</td>
                                                <td>@sub.TeachEdu.EduSub.Subject.SubjectName</td>
                                                <td>@sub.TeachEdu.Teacher.Name</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Students</th>
                        <th scope="col" class="col-1">
                            @if (Model.Class.Students! != null && Model.Class.Students.Count > 0)
                            {
                                <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target=".tr-@Model.Class.ClassId-students" aria-expanded="false" aria-controls="collapseExample"><i class="bi bi-list"></i></button>
                            }
                        </th>
                    </tr>
                </thead>
                <tbody class="table-yellow">
                    @if (Model.Class.Students! != null && Model.Class.Students.Count > 0)
                    {
                        <tr class="collapse tr-@Model.Class.ClassId-students">
                            <td colspan="2">
                                <div class="collapse tr-@Model.Class.ClassId-students">
                                    <table class="table table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col" class="col-1">Id</th>
                                                <th scope="col">Name</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-yellow">
                                            @foreach (var stu in Model.Class.Students!)
                                            {
                                                <tr>
                                                    <td>@stu.StudentId</td>
                                                    <td>@stu.StudentName</td>
                                                </tr>                                            
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    }                                          
                </tbody>
            </table>
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Books</th>
                        <th scope="col" class="col-1">
                            @if (Model.Class.ClassBooks! != null && Model.Class.ClassBooks.Count > 0)
                            {
                                <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target=".tr-@Model.Class.ClassId-books" aria-expanded="false" aria-controls="collapseExample"><i class="bi bi-list"></i></button>
                            }
                        </th>
                    </tr>
                </thead>
                <tbody class="table-yellow">
                    <tr class="collapse tr-@Model.Class.ClassId-books">
                        <td colspan="2">
                            <div class="collapse tr-@Model.Class.ClassId-books">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="col-1">Id</th>
                                            <th scope="col">Title</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-yellow">
                                        @foreach (var cb in Model.Class.ClassBooks!)
                                        {
                                            <tr>
                                                <td>@cb.Book.BookId</td>
                                                <td>@cb.Book.Title</td>
                                            </tr>
                                        }                                        
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>                    
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-dark m-3">
                <h5 class="alert-heading"><i class="bi bi-exclamation-circle-fill"></i> Information</h5>
                <hr>
                <p> No Classes, Students and Books found!</p>
            </div>
        }        
    </div>
</div>