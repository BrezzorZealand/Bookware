@page
@model Bookware.Pages.Education_Pages.EducationDetailsModel
@{
    ViewData["Title"] = "Education Details";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Education!.EduId)   </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Education!.EduId)  </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Education!.EduName)   </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Education!.EduName)  </dd>        
    </dl>    
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center caption-top">
            <caption>List of Subjects</caption>
            <thead class="table-dark">
                <tr>
                    <th scope="col">Subjects</th>
                    <th scope="col" class="col-1">
                        @if (Model.Education!.EduSubs is not null && Model.Education!.EduSubs.Count > 0)
                        {
                            <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target=".tr-@Model.Education.EduId" aria-expanded="false" aria-controls="collapseExample"><i class="bi bi-list"></i></button>
                        }
                    </th>
                </tr>
            </thead>
            <tbody class="table-yellow">
                @if (Model.Education!.EduSubs is not null && Model.Education!.EduSubs.Count > 0)
                {
                    <tr class="collapse tr-@Model.Education.EduId">
                        <td colspan="2">
                            <div class="collapse tr-@Model.Education.EduId">
                                <table class="table table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="col-1">Id</th>
                                            <th scope="col">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-yellow">
                                        @foreach (var eduSub in Model.Education.EduSubs)
                                        {
                                            <tr>
                                                <td>@eduSub.Subject.SubjectId</td>
                                                <td>@eduSub.Subject.SubjectName</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>