@page
@model Bookware.Pages.Education_Pages.EducationDetailsModel
@{
    ViewData["Title"] = "Education Details";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Education!.EduId)   </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Education!.EduId)  </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Education!.EduName)   </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Education!.EduName)  </dd>        
    </dl>    
    <table class="table table-bordered table-hover caption-top text-center">
        <caption>List of Subjects</caption>
        <thead class="table-dark">
            <tr>
                <th scope="col" class="col-1">Id</th>
                <th scope="col">Subjects</th>
            </tr>
        </thead>
        <tbody class="table-yellow">
            @foreach (var cb in Model.Education!.EduSubs)
            {
                <tr>
                    <td>@cb.Subject.SubjectId</td>
                    <td>@cb.Subject.SubjectName</td>
                </tr>
            }
        </tbody>
    </table>
</div>