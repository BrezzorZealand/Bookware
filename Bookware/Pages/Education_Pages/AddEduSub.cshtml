@page
@model Bookware.Pages.Education_Pages.AddEduSubModel
@using Bookware.Models
@{
}

            
<div class="card">
    <div class="card-header">
        <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="align-content-center">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form method="post">
                        <div class="form-group form-floating mb-3">
                            <input asp-for="EduSub!.EduId" class="form-control" type="number" placeholder="@Html.DisplayNameFor(Edu => Edu.EduSub!.EduId)" readonly/>
                            <label asp-for="EduSub!.EduId">@Html.DisplayNameFor(Edu => Edu.EduSub!.EduId)</label>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="EduSub!.Edu.EduName" class="form-control" type="text" placeholder="@Html.DisplayNameFor(Edu => Edu.EduSub!.Edu.EduName)" readonly />
                            <label asp-for="EduSub!.Edu.EduName">@Html.DisplayNameFor(Edu => Edu.EduSub!.Edu.EduName)</label>
                        </div>
                        <div class="form-group form-floating mb-3">
                            <select asp-for="EduSub!.SubjectId" asp-items="Model.Options" class="form-control">
                                <option value="">Select Subject</option>                                
                            </select>
                            <label>Subject</label>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <a class="btn btn-danger" asp-page="/Education_Pages/AllEducations">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>