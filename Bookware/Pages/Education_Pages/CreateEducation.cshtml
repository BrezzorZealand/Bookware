@page
@model Bookware.Pages.Education_Pages.CreateEducationModel
@{
    ViewData["Title"] = "Add Education";
}

<div class="card bg-yellow">
    <div class="card-header">
        <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="align-content-center">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group form-floating mb-3">
                            <input asp-for="Education!.EduName" class="form-control" type="text" placeholder="@Html.DisplayNameFor(education => education.Education!.EduName)" />
                            <label asp-for="Education!.EduName">Name</label>
                            <span asp-validation-for="Education!.EduName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Add" class="btn btn-success" />
                            <a class="btn btn-danger" asp-page="AllEducations">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>