@page
@model Bookware.Pages.Education_Pages.AllEducationsModel
@{
    ViewData["Title"] = "All Educations";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<a class="btn btn-dark" asp-page="/Education_Pages/CreateEducation"><i class="bi bi-plus"></i> Add Education</a>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center caption-top">
        <caption>List of Educations</caption>
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Uddannelse navn</th>
                <th scope="col" class="col-1"></th>
            </tr>
        </thead>
        <tbody class="table-yellow">
            @if (Model.Educations != null)
            {
                @foreach (var item in Model.Educations)
                {
                    <tr>
                        <td>@item!.EduId</td>
                        <td>@item.EduName </td>                        
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-page="/Education_Pages/AddEduSub" asp-route-Eid="@item.EduId" class="dropdown-item"><i class="bi bi-plus"></i> Add Subject</a></li>
                                    <li><a asp-page="/Education_Pages/RemoveEduSub" asp-route-Eid="@item.EduId" class="dropdown-item"><i class="bi bi-dash"></i> Remove Subject</a></li>
                                    <li><a asp-page="/Education_Pages/EducationDetails" asp-route-id="@item.EduId" class="dropdown-item"><i class="bi bi-journal-text"></i> Details</a></li>
                                    <li><a asp-page="/Education_Pages/UpdateEducation" asp-route-id="@item.EduId" class="dropdown-item"><i class="bi bi-pen"></i> Edit</a></li>
                                    <li><hr class="dropdown-divider"/></li>
                                    <li>
                                        <form asp-page-handler="Delete" method="post" asp-route-id="@item.EduId" onclick="return confirm('Are you sure you want to delete?')">
                                            <button class="dropdown-item text-danger"><i class="bi bi-trash"></i> Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                            
                            
                            
                            
                            
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>